class Solution:
    def isPalindrome(self, x: int) -> bool:
        original_num = str(x)
        new_num = ""
        if x < 0: 
            return False
        elif x > 0:
            new_num = original_num[::-1]
            if new_num == original_num:
                return True
        elif x == 0:
            return True
        else:
            return False
                
            
